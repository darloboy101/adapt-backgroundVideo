<div class="backgroundVideo-inner">
	<video preload="auto" loop autoplay muted poster="{{_theme._backgroundVideo._poster}}">
	    <source src="{{_theme._backgroundVideo._mp4}}" type="video/mp4">
	    <source src="{{_theme._backgroundVideo._webm}}" type="video/webm">	    
	</video>
	{{#if _theme._backgroundVideo._overlay}}
		<div class="video-overlay"></div>
	{{/if}}
	{{#if _theme._backgroundVideo._fallback}}
		<div class="video-fallback" style="background: url('{{_theme._backgroundVideo._poster}}') center center / cover no-repeat;"></div>
	{{/if}}
</div>